<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_item_choose_activity">
        <item name="android:background">@null</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_main_fragment_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/selector_main_fragment_item</item>
    </style>

    <style name="iten_home_Tuiian">
        <item name="android:layout_margin">1dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_toLeftOf">@id/erweimaIv</item>
        <item name="android:layout_toRightOf">@id/menu</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/shape_bg_search</item>
        <item name="android:drawableLeft">@mipmap/tt_top_search</item>
    </style>
</resources>
