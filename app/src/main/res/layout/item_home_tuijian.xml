<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TuiJianTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Brand"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/TuijianIv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/TuiJianIv2"
            style="@style/iten_home_Tuiian"
            android:src="@mipmap/ic_launcher" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow android:layout_weight="1">

                <ImageView
                    android:id="@+id/TuiJianIv3"
                    style="@style/iten_home_Tuiian"
                    android:src="@drawable/selector_choose_activity_boys" />

                <ImageView
                    android:id="@+id/TuiJianIv4"
                    style="@style/iten_home_Tuiian"
                    android:src="@drawable/selector_choose_activity_boys" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <ImageView
                    android:id="@+id/TuiJianIv5"
                    style="@style/iten_home_Tuiian"
                    android:src="@drawable/selector_choose_activity_boys" />

                <ImageView
                    android:id="@+id/TuiJianIv6"
                    style="@style/iten_home_Tuiian"
                    android:src="@drawable/selector_choose_activity_boys" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>